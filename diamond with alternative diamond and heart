#include <stdio.h>

int main() 
{
    int rows;
    printf("Enter the number of rows: ");
    scanf("%d", &rows);
    for (int i = 0; i < rows; )
{
        for (int j = 0; j < rows  i - 1; j++)
            printf(" ");
        for (int j = 0; j <= i; j++) {
            if (j % 2 == 0)
                printf("%c ", 4); 
            else
                printf("%c ", 3);
        }
        printf("\n");
    }
    for (int i = rows - 2; i >= 0; i--)
{
        for (int j = 0; j < rows - i - 1; j++)
            printf(" ");
        for (int j = 0; j <= i; j++) {
            if (j % 2 == 0)
                printf("%c ", 4); 
            else
                printf("%c ", 3); 
        }
        printf("\n");
    }
    return 0;
}
